---
import Layout from '../layouts/Layout.astro';
import MatrixRain from '../components/MatrixRain';
---

<Layout title="401 - Unauthorized">
    <div class="min-h-screen bg-black relative overflow-hidden">
        <MatrixRain client:load />
        
        <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-4 z-10">
            <div class="space-y-6 md:space-y-8 w-full max-w-lg mx-auto">
                <!-- 401 Text with Glitch Effect -->
                <div class="relative">
                    <h1 class="text-6xl md:text-9xl font-mono text-neon-green glitch-text">401</h1>
                    <div class="absolute inset-0 text-6xl md:text-9xl font-mono text-neon-green/20 glitch-text glitch-text--before">401</div>
                    <div class="absolute inset-0 text-6xl md:text-9xl font-mono text-neon-green/20 glitch-text glitch-text--after">401</div>
                </div>

                <!-- Error Message -->
                <div class="space-y-3 md:space-y-4 px-4">
                    <h2 class="text-xl md:text-2xl font-mono text-neon-green">ACCESS DENIED: UNAUTHORIZED</h2>
                    <p class="text-sm md:text-base text-neon-green/60 font-mono max-w-md mx-auto">
                        Authentication required. Your credentials could not be verified.
                    </p>
                </div>

                <!-- Authentication Status -->
                <div class="bg-black/50 border border-neon-green/30 p-3 md:p-4 rounded-lg max-w-md mx-auto">
                    <div class="space-y-2 text-left text-sm md:text-base">
                        <p class="text-neon-green/80 font-mono">Status: AUTHENTICATION FAILED</p>
                        <p class="text-neon-green/80 font-mono">Access Level: RESTRICTED</p>
                        <p class="text-neon-green/80 font-mono">Session: TERMINATED</p>
                    </div>
                </div>

                <!-- Navigation Buttons -->
                <div class="flex flex-col sm:flex-row gap-3 md:gap-4 justify-center px-4">
                    <a href="mailto:silentcode@privatemx.org" class="w-full sm:w-auto px-6 md:px-8 py-2.5 md:py-3 bg-black border border-neon-green text-neon-green text-sm md:text-base font-mono hover:bg-neon-green hover:text-black transition-all duration-300 rounded cursor-pointer">
                        CONTACT
                    </a>
                </div>
            </div>
        </div>
    </div>
</Layout>

<style>
    .glitch-text {
        position: relative;
        animation: glitch 3s infinite;
    }

    .glitch-text--before {
        animation: glitch 3s infinite;
        clip-path: polygon(0 0, 100% 0, 100% 45%, 0 45%);
        transform: translate(-0.025em, 0.0125em);
        opacity: 0.75;
    }

    .glitch-text--after {
        animation: glitch 3s infinite;
        clip-path: polygon(0 60%, 100% 60%, 100% 100%, 0 100%);
        transform: translate(0.025em, -0.0125em);
        opacity: 0.75;
    }

    @keyframes glitch {
        0% { transform: translate(0); }
        20% { transform: translate(-2px, 2px); }
        40% { transform: translate(-2px, -2px); }
        60% { transform: translate(2px, 2px); }
        80% { transform: translate(2px, -2px); }
        100% { transform: translate(0); }
    }
</style> 