---
import Layout from '../layouts/Layout.astro';
import MatrixRain from '../components/MatrixRain';
import ScrambleText from '../components/ScrambleText';
---

<Layout title="SILENT CODE - Tools">
    <div class="min-h-screen bg-black">
        <MatrixRain client:load />
        
        <nav class="fixed top-0 w-full flex justify-between items-center px-8 py-4 z-50 bg-black/90">
            <div class="font-mono text-2xl text-neon-red">SILENT CODE</div>
            <a href="/home" class="font-mono text-white hover:text-neon-red">Back to Home</a>
        </nav>

        <div class="pt-24 px-8 pb-16 relative z-10">
            <ScrambleText 
					text="SILENT CODE TOOLS"
					className="font-tech-mono text-center text-2xl md:text-5xl text-neon-red mb-4 text-shadow-lg"
					client:load
			/>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <!-- Penetration Testing -->
                <div class="product-card opacity-0 translate-y-4 bg-black p-6 rounded border border-neon-red/20 hover:border-neon-red transition-all duration-300 hover:-translate-y-1 relative group cursor-pointer">
                    <div class="text-neon-red text-xl mb-2 font-mono">Web Scrapper</div>
                    <div class="text-neon-red/60 mb-4 font-mono">The Web Scraper is a powerful Python-based tool designed
