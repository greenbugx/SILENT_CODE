---
import Layout from '../layouts/Layout.astro';
import MatrixRain from '../components/MatrixRain';
import ScrambleText from '../components/ScrambleText';
import TypewriterText from '../components/TypewriterText';
import ScrollLink from '../components/ScrollLink';
import GoToTop from '../components/GoToTop';
import JPG1 from '../assets/a_vibrant_logo_for_green_bug_x.jpeg?url';
import JPG2 from '../assets/IMG_20250329_121122_782.jpg?url';
import JPG3 from '../assets/IMG_20250329_121202_248.jpg?url';
---

<Layout title="SILENT CODE">
	<div id="app" class="opacity-100">
		<GoToTop client:load />
		<header class="relative h-screen flex flex-col justify-center items-center text-center px-4 overflow-hidden bg-dark-bg">
			<MatrixRain client:load />
			<div class="absolute inset-0 w-[200%] h-[200%] bg-[repeating-linear-gradient(45deg,transparent,transparent_10px,rgba(0,255,0,0.1)_10px,rgba(0,255,0,0.1)_20px)] animate-background-move"></div>
			
			<nav class="fixed top-0 w-full flex justify-between items-center px-5% py-4 z-50 bg-dark-bg/90 backdrop-blur-md">
				<div class="font-tech-mono text-2xl text-neon-green text-shadow-lg ml-4">SILENT CODE</div>
				
				<!-- Desktop Navigation -->
				<ul class="hidden md:flex gap-8 mr-4">
					<li>
						<ScrollLink href="#about" className="text-white hover:text-neon-green transition-colors" client:load>
							About
						</ScrollLink>
					</li>
					<li>
						<ScrollLink href="#team" className="text-white hover:text-neon-green transition-colors" client:load>
							Team
						</ScrollLink>
					</li>
					<li>
						<ScrollLink href="#contact" className="text-white hover:text-neon-green transition-colors" client:load>
							Contact
						</ScrollLink>
					</li>
					<li><a href="/shop" class="text-white hover:text-neon-green transition-colors">Shop</a></li>
				</ul>

				<!-- Mobile Menu Button -->
				<button id="mobile-menu-button" class="md:hidden text-neon-green p-2 mr-4">
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>

				<!-- Mobile Navigation -->
				<div id="mobile-menu" class="fixed top-0 right-0 h-full w-64 bg-dark-bg/95 backdrop-blur-md transform translate-x-full transition-transform duration-300 ease-in-out md:hidden">
					<div class="flex justify-end p-4">
						<button id="close-menu" class="text-neon-green p-2">
							<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
							</svg>
						</button>
					</div>
					<ul class="flex flex-col gap-4 p-4">
						<li>
							<ScrollLink href="#about" className="text-white hover:text-neon-green transition-colors block py-2" client:load>
								About
							</ScrollLink>
						</li>
						<li>
							<ScrollLink href="#team" className="text-white hover:text-neon-green transition-colors block py-2" client:load>
								Team
							</ScrollLink>
						</li>
						<li>
							<ScrollLink href="#contact" className="text-white hover:text-neon-green transition-colors block py-2" client:load>
								Contact
							</ScrollLink>
						</li>
						<li>
							<a href="/shop" class="text-white hover:text-neon-green transition-colors block py-2">Shop</a>
						</li>
					</ul>
				</div>
			</nav>

			<div class="relative z-10">
				<ScrambleText 
					text="SILENT CODE Team"
					className="font-tech-mono text-5xl text-neon-green mb-4 text-shadow-lg"
					client:load
				/>
				<TypewriterText 
					text="Three Experts pushing the boundaries of digital security"
					className="text-xl font-tech-mono text-white"
					delay={50}
					client:load
				/>
			</div>
		</header>

		<section id="about" class="py-20 px-10% text-center bg-dark-bg">
			<h2 class="font-tech-mono text-4xl text-neon-green mb-8 text-shadow-lg">About Us</h2>
			<p class="max-w-2xl mx-auto">We are a team of elite cybersecurity professionals dedicated to protecting digital assets and uncovering vulnerabilities before they can be exploited.</p>
		</section>

		<section id="team" class="py-20 px-10% bg-dark-bg">
			<h2 class="font-tech-mono text-4xl text-neon-green mb-12 text-center text-shadow-lg">Our Team</h2>
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				<div class="bg-black/30 p-8 rounded-lg text-center transition-transform hover:-translate-y-2.5 border border-neon-green/10 hover:border-neon-green  cursor-pointer">
					<div class="w-48 h-48 mx-auto mb-6 rounded-full overflow-hidden border-4 border-neon-green">
						<img src={JPG2} alt="Team Member 1" class="w-full h-full object-cover" />
					</div>
					<h3 class="font-tech-mono text-2xl text-neon-green mb-2">Jzchovic "Arthemis78" Portuga</h3>
					<p class="text-neon-blue mb-4">Penetration Tester</p>
					<div class="flex flex-wrap gap-2 justify-center">
						<span class="bg-neon-green/10 px-3 py-1 rounded-full text-sm text-neon-green">Network Security</span>
						<span class="bg-neon-green/10 px-3 py-1 rounded-full text-sm text-neon-green">Malware Analysis</span>
						<span class="bg-neon-green/10 px-3 py-1 rounded-full text-sm text-neon-green">Social Engineering</span>
					</div>
				</div>

				<div class="bg-black/30 p-8 rounded-lg text-center transition-transform hover:-translate-y-2.5 border border-neon-green/10 hover:border-neon-green  cursor-pointer">
					<div class="w-48 h-48 mx-auto mb-6 rounded-full overflow-hidden border-4 border-neon-green">
						<img src={JPG1} alt="Team Member 2" class="w-full h-full object-cover" />
					</div>
					<h3 class="font-tech-mono text-2xl text-neon-green mb-2">Jevgenic "GreenBugX" Chernov</h3>
					<p class="text-neon-blue mb-4">Reverse Engineer & Coder</p>
					<div class="flex flex-wrap gap-2 justify-center">
						<span class="bg-neon-green/10 px-3 py-1 rounded-full text-sm text-neon-green">Web App Testing</span>
						<span class="bg-neon-green/10 px-3 py-1 rounded-full text-sm text-neon-green">Binary Exploitation</span>
						<span class="bg-neon-green/10 px-3 py-1 rounded-full text-sm text-neon-green">Cryptography</span>
					</div>
				</div>

				<div class="bg-black/30 p-8 rounded-lg text-center transition-transform hover:-translate-y-2.5 border border-neon-green/10 hover:border-neon-green  cursor-pointer">
					<div class="w-48 h-48 mx-auto mb-6 rounded-full overflow-hidden border-4 border-neon-green">
						<img src={JPG3} alt="Team Member 3" class="w-full h-full object-cover" />
					</div>
					<h3 class="font-tech-mono text-2xl text-neon-green mb-2">Marcus "SHAKHAL" Johnson Khuyati</h3>
					<p class="text-neon-blue mb-4">Security Architect</p>
					<div class="flex flex-wrap gap-2 justify-center">
						<span class="bg-neon-green/10 px-3 py-1 rounded-full text-sm text-neon-green">System Design</span>
						<span class="bg-neon-green/10 px-3 py-1 rounded-full text-sm text-neon-green">Cloud Security</span>
						<span class="bg-neon-green/10 px-3 py-1 rounded-full text-sm text-neon-green">Threat Modeling</span>
					</div>
				</div>
			</div>
		</section>

		<section id="contact" class="py-20 px-10% bg-dark-bg">
			<h2 class="font-tech-mono text-4xl text-neon-green mb-12 text-center text-shadow-lg">Get in Touch</h2>
			<div class="max-w-2xl mx-auto">
				<form class="flex flex-col gap-4">
					<input type="text" placeholder="Name" required class="p-4 bg-black/30 border border-neon-green/10 rounded-lg text-white focus:outline-none focus:border-neon-green" />
					<input type="email" placeholder="Email" required class="p-4 bg-black/30 border border-neon-green/10 rounded-lg text-white focus:outline-none focus:border-neon-green" />
					<textarea placeholder="Message" required class="p-4 bg-black/30 border border-neon-green/10 rounded-lg text-white h-40 resize-y focus:outline-none focus:border-neon-green"></textarea>
					<button type="submit" class="p-4 bg-neon-green text-dark-bg font-tech-mono font-bold rounded-lg transition-all hover:bg-neon-green/80 hover:-translate-y-0.5 cursor-pointer">Send Message</button>
				</form>
			</div>
		</section>

		<footer class="py-8 text-center bg-dark-bg border-t border-neon-green/10">
			<div class="mb-4">
				<a href="#" class="text-white text-2xl mx-4 hover:text-neon-green transition-colors"><i class="fab fa-github"></i></a>
				<a href="#" class="text-white text-2xl mx-4 hover:text-neon-green transition-colors"><i class="fab fa-telegram"></i></a>
				<a href="#" class="text-white text-2xl mx-4 hover:text-neon-green transition-colors"><i class="fab fa-twitter"></i></a>
			</div>
			<p>&copy; 2025 SILENT CODE. All rights reserved.</p>
		</footer>
	</div>
</Layout>

<script>
	// Mobile menu functionality
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const closeMenuButton = document.getElementById('close-menu');
	const mobileMenu = document.getElementById('mobile-menu');

	mobileMenuButton?.addEventListener('click', () => {
		mobileMenu?.classList.remove('translate-x-full');
	});

	closeMenuButton?.addEventListener('click', () => {
		mobileMenu?.classList.add('translate-x-full');
	});

	// Close menu when clicking a link
	const mobileLinks = mobileMenu?.querySelectorAll('a');
	mobileLinks?.forEach(link => {
		link.addEventListener('click', () => {
			mobileMenu?.classList.add('translate-x-full');
		});
	});
</script>

<style>
	.text-shadow-lg {
		text-shadow: 0 0 10px rgba(0, 255, 0, 0.5);
	}

	@keyframes glitch {
		0% {
			transform: translate(0);
		}
		20% {
			transform: translate(-2px, 2px);
		}
		40% {
			transform: translate(-2px, -2px);
		}
		60% {
			transform: translate(2px, 2px);
		}
		80% {
			transform: translate(2px, -2px);
		}
		100% {
			transform: translate(0);
		}
	}

	@keyframes background-move {
		0% {
			transform: translateX(0);
		}
		100% {
			transform: translateX(-50%);
		}
	}
</style>
